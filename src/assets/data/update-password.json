[   
    {
        "id":"email",
        "label":"Email ID",
        "class":"col-md-12",
        "type":"email",
        "max":75,
        "required":true
    },
    {
        "id":"verificationCode",
        "label":"Verification Code",
        "class":"col-md-12",
        "type":"number",
        "max":6,
        "required":true
    },
    {
        "id":"newPassword",
        "label":"New password",
        "class":"col-md-12",
        "type":"password",
        "max":25,
        "required":true,
        "info": "must contain one digit from 0-9\nmust contain one lowercase character\nmust contain one special symbol from the list '@#$%'\nmust be between 6 to 20 character long\n"
    },
    {
        "id":"reEnterNewPassword",
        "label":"Re-enter new password",
        "class":"col-md-12",
        "type":"password",
        "max":25,
        "required":true
    },
    {
        "id":"CANCEL",
        "label":"Cancel",
        "class":"col-md-4",
        "type":"button",
        "buttonClass":"secondary",
        "margin": "0 0 0 25px"
    },
    {
        "id":"UPDATEPASSWORD",
        "label":"Change Password",
        "class":"col-md-8",
        "type":"button",
        "buttonClass":"primary",
        "width": "calc(100% - 20px)",
        "margin": "0 0 0 20px"
    }
]